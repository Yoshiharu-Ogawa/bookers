<body>

  <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <% @books.each do |book| %>
      <today>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id)  %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Destroy" %>
          </td>
        </tr>
      </today>
    <% end %>
    </table>


  <h2>NEW book</h2>

  <%= form_with model: @book_new do |f| %>
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

</body>
