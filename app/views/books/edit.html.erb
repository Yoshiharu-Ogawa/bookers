<h1>Editing Book</h1>

<div id="error_explanation">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohidited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
</div>

<%= form_with model: @book do |f| %>
    <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>

<% @books.find do |book| %>
    <%= link_to 'Show', book_path(book.id) %>
    |
    <%= link_to 'back', books_path %>
<% end %>

